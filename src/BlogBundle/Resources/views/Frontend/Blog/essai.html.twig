  
{% extends 'BlogBundle:Frontend/Blog:index.html.twig' %}
{% block sidebar %}
  {{ parent()}}
{% endblock sidebar %}
{% block main %}
    {% block carousel %}
    {% endblock carousel %}
    {% block container %}
      <div class="col-md-9">
        <article id="main-content">
          <div class="nwTable col-md-12">
            <h1>
              
            </h1>
            {% media event.excerptPhoto, 'excerpt' with {'class': 'nwLogo', 'style':'height:140px;width:190px;'} %}
          </div>
          {% if event.article %}
            <div class=" col-md-12" style="margin-top: 15px;">
              {% media event.article.excerptPhoto, 'excerpt' with {'class':'col-md-12', 'style': 'width:100%; height: 400px; padding: 0 0 0 0;  margin : 0 0 0 0;'} %}

              <div class="text--30 text--bold black margin--tx4 margin--halfb lh32"><h1>{{ event.article.title|capitalize }}</h1></div>

                <p class="text--mini app-grey">Publié le 
                  <a href="{{ path('ed_frontend_blog_by_author', {'username': event.article.author.username}) }}">{{ event.article.author.blogDisplayName }}</a> le {{ event.article.publishedAt|blogDate}}
                  {% if (event.article.categories|length) %} in 
                    {%  for category in event.article.categories %}
                      {{ loop.index0 ? ', ' }}<a href="{{ path('ed_frontend_blog_by_category', {'categorySlug': category.term.slug}) }}" >{{ category.term.title }}</a>
                    {% endfor %}
                  {% endif %}
                  {% if ( is_granted('ACCESS_COMMENTS') and commentsCnt) %}
                    | <a href="#comments">{{  commentsCnt }}</a> comment{{  (commentsCnt > 1) ? 's' }}
                  {% endif  %}
                </p>
                {% if (event.article.tags|length) %}
                  <p class="text--mini app-grey"><i class="fa fa-tags"></i>
                    {% for tag in event.article.tags %}
                      <a href="{{ path('ed_frontend_blog_by_tag', {'tagSlug': tag.term.slug}) }}">{{ tag.term.title }}
                      </a>
                      {% if not loop.last %}, {% endif %}
                    {% endfor %}
                  </p>
                {% endif  %}
                <p>{{ event.article.content | raw }}</p>
            </div>
          {% endif %}
          <div class=" col-md-12" style="margin-top: 15px;">
            <div class="nwTable col-md-6">
              <h1>
                <p>
                  Classement Pilote {{event.getName}} {{event.getParent.getName}}
              
                </p>
              </h1>
            </div>
            <table class="table table-bordered">
              <thead>
                <tr>
                  <th>Pilote</th>
                  <th>Equipe</th>
                  <th>Meilleur Temps</th>
                  <th>N° tours</th>
                </tr>
              </thead>
              <tbody>
                {% for rank in event.getClassements() %}
                  <tr>
                    {% set pilot = rank.getPilot() %}
                      {% if  pilot %}
                      <td>{{ pilot }}</td>
                      <td>{{ pilot.getTeam }}</td>
                      <td>{{ rank.time |date("h:i:s")}}</td>
                      <td>{{ rank.getTours() }}</td>
                    {% endif %}
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
        </article>
      </div>    
    {% endblock container %}
    <div class="col-md-3" style="padding: 0 0 0 0; margin-top: 5px;" > 
        <div class="col-md-12 semi-transparent-round" style="padding: 0 0 0 0; margin: 0 0 0 0; height: auto; width:100%;"> 
          {% set parent = event.getParent %}
          {% for item in  parent.getChildren %}
            <div style="width:100%; height: 180px; border:solid; margin: padding: 0 0 0 0;">
                <a class="black" href="{{ path('ed_blog_course', { 'eventName': item.getName(), 'parent': item.getName(), 'slug': item.getId(), 'type' : type }) }}">
                    <div class="col-md-12" style="width:100%; height: 20px; padding: 0 0 0 0;  margin : 5px 0 0 0;">
                        <h1 style=" text-align:center;color:black;">{{ item.name|capitalize }}</h1>
                    </div>
                    <div class="col-md-12"; style="width:100%;height: 150px !important; padding: 0 0 0 0;  margin : 0 0 0 0;">
                        <img style="width:100%; height:100%;" class="" src="{% path item.excerptPhoto, 'big' %}">
                    </div>    
                </a>
            </div>
        {% endfor %}
          
        </div>  
    </div>
{% endblock main %}






  