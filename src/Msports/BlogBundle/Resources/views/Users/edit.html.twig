{% extends 'EDBlogBundle:Layout:blog_admin_main.html.twig' %}
{% form_theme form '@EDBlog/Global/forms.html.twig' %}

{% block content %}
    <div class="dashboard-content">
        <h1 class="text--bold margin--halft margin--b">Edit blog user</h1>

        <form action="{{ path('ed_blog_user_edit', { 'username' : user.username}) }}" method="post">
            {{ form_errors(form) }}
            <div>
                {{ form_label(form.blogDisplayName) }}
                {{ form_widget(form.blogDisplayName) }}
                {{ form_errors(form.blogDisplayName) }}
            </div>
            <div>
                {{ form_label(form.role) }}
                {{ form_widget(form.role) }}
                {{ form_errors(form.role) }}
            </div>
            {{ form_rest(form) }}
        </form>
    </div>
{% endblock content %}

