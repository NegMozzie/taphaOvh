{% extends 'EDBlogBundle:Layout:blog_admin_main.html.twig' %}
{% form_theme form '@EDBlog/Global/forms.html.twig' %}

{% block content %}
    <div class="dashboard-content">
        <h1 class="text--bold margin--halft margin--b">Edit tag</h1>
        {{ form_errors(form) }}
        <form method="post" action="{{ path('ed_blog_tag_edit', { 'slug' : slug}) }}">
            <div>
                {{ form_label(form.term.title) }}
                {{ form_widget(form.term.title) }}
                {{ form_errors(form.term.title) }}
            </div>
            <div>
                {{ form_label(form.term.slug) }}
                {{ form_widget(form.term.slug) }}
                {{ form_errors(form.term.slug) }}
            </div>
            <div>
                {{ form_label(form.description) }}
                {{ form_widget(form.description) }}
                {{ form_errors(form.description) }}
            </div>
            {{ form_rest(form) }}
        </form>
    </div>
{% endblock content %}

